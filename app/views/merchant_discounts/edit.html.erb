<h1>Edit Discount</h1>

<%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch, local:true do |f| %>
  <%= f.label :percentage, class: "form-label mt-4" %>
  <%= f.number_field :percentage, value: @discount.percentage, class: "form-control", min:0, max:100 %><br><br>

  <%= f.label :threshold, class: "form-label mt-4" %>
  <%= f.number_field :threshold, value: @discount.threshold, class: "form-control", min:0 %><br><br>

  <%= f.submit "Edit Discount", class: "btn btn-primary"%>
<%end%>
