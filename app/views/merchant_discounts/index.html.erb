<h1><%= @merchant.name %> Bulk Discounts </h1>

Upcoming Holidays:<br>
<ul>
  <% @holidays.each do |holiday| %>
    <li><%="#{holiday.name} is coming up on #{holiday.date}"%> </li>
  <% end %>
</ul>

<%= button_to "Create New Bulk Discount", new_merchant_discount_path, method: :get, class: "btn btn-primary" %><br>

<ul>
  <% @merchant.discounts.each do |discount| %>
    <div id="discount-<%=discount.id%>">
      <li><%=link_to "#{discount.percentage}% off #{discount.threshold} items", merchant_discount_path(@merchant, discount) %> <%= button_to "Delete", merchant_discount_path(@merchant, discount), method: :delete, class: "btn btn-secondary"%><%= button_to "Edit", edit_merchant_discount_path(@merchant, discount), method: :get, class: "btn btn-secondary"%></li><br>
    </div>
  <%end%>
</ul>
