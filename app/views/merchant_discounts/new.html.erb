<h1>New Discount</h1>

<%= form_with url: merchant_discounts_path(@merchant), method: :post, local:true do |f| %>
  <%= f.label :percentage, class: "form-label mt-4"%>
  <%= f.number_field :percentage, class: "form-control", min:0, max:100 %><br><br>

  <%= f.label :threshold, class: "form-label mt-4" %>
  <%= f.number_field :threshold, class: "form-control", min:0 %><br><br>

  <%= f.submit "Create Discount", class: "btn btn-primary"%>
<%end%>
