<h1>New Discount</h1>

<%= form_with url: merchant_discounts_path(@merchant), method: :post, local:true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage %><br><br>

  <%= f.label :threshold %>
  <%= f.number_field :threshold %><br><br>

  <%= f.submit "Create Discount"%>
<%end%>
